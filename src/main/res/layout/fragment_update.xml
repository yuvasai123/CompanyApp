<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/baseline_arrow_back_24"

        style="@style/Theme.OrderList"
        app:title="Update Your Order"
        android:gravity="center"
        android:textAlignment="center">
    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/orderDetails"
                android:layout_below="@+id/toolbar"
                android:padding="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter the customer name"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:inputType="text"
                    android:background="@drawable/edit_text_border"
                    android:id="@+id/UpdateCustomerName"/>

                <EditText
                    android:id="@+id/UpdateEdtDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/UpdateCustomerName"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edit_text_border"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Enter date"
                    android:padding="10dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/itemDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orderDetails"
                android:layout_marginStart="60dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tomato650"
                    android:padding="10dp">


                    <TextView
                        android:id="@+id/tm650"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TM650 :  "
                        android:textSize="20sp"
                        android:textStyle="bold"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tm650"
                        android:layout_toRightOf="@+id/tm650"
                        android:id="@+id/Updatepro1"
                        android:inputType="number"
                        android:background="@drawable/edit_text_border"
                        android:singleLine="true"
                        android:padding="5dp"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/chilli650"
                    android:layout_below="@+id/tomato650"
                    android:layout_marginTop="20dp"
                    android:padding="10dp">


                    <TextView
                        android:id="@+id/ch650"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CH650 :  "
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/ch650"
                        android:layout_toRightOf="@+id/ch650"
                        android:id="@+id/Updatepro2"
                        android:singleLine="true"
                        android:inputType="number"
                        android:background="@drawable/edit_text_border"
                        android:padding="5dp"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/soya650"
                    android:layout_below="@+id/chilli650"
                    android:layout_marginTop="10dp"
                    android:padding="10dp">


                    <TextView
                        android:id="@+id/so650"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SO650 :  "
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/so650"
                        android:layout_toRightOf="@+id/so650"
                        android:id="@+id/Updatepro3"
                        android:singleLine="true"
                        android:inputType="number"
                        android:background="@drawable/edit_text_border"
                        android:padding="5dp"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/venigear650"
                    android:layout_below="@+id/soya650"
                    android:layout_marginTop="10dp"
                    android:padding="10dp">


                    <TextView
                        android:id="@+id/vg650"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VG650 :  "
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/vg650"
                        android:layout_toRightOf="@+id/vg650"
                        android:id="@+id/Updatepro4"
                        android:singleLine="true"
                        android:inputType="number"
                        android:background="@drawable/edit_text_border"
                        android:padding="5dp"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tomato5kg"
                    android:layout_below="@+id/venigear650"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:padding="10dp">


                    <TextView
                        android:id="@+id/tm5kg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TM5kg :  "
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tm5kg"
                        android:layout_toRightOf="@+id/tm5kg"
                        android:id="@+id/Updatepro5"
                        android:singleLine="true"
                        android:inputType="number"
                        android:background="@drawable/edit_text_border"
                        android:padding="5dp"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/chilli5kg"
                    android:layout_below="@+id/tomato5kg"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    >


                    <TextView
                        android:id="@+id/ch5kg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CH5kg :  "
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/ch5kg"
                        android:layout_toRightOf="@+id/ch5kg"
                        android:id="@+id/Updatepro6"
                        android:singleLine="true"
                        android:inputType="number"
                        android:background="@drawable/edit_text_border"
                        android:padding="5dp"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/soya5kg"
                    android:layout_below="@+id/chilli5kg"
                    android:layout_marginTop="10dp"
                    android:padding="10dp">


                    <TextView
                        android:id="@+id/so5kg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SO5kg :  "
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/Updatepro7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/so5kg"
                        android:layout_toRightOf="@+id/so5kg"
                        android:background="@drawable/edit_text_border"
                        android:inputType="number"
                        android:padding="5dp"
                        android:singleLine="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalamount"
                    android:layout_below="@+id/soya5kg"
                    android:layout_marginTop="30dp">


                    <TextView
                        android:id="@+id/total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TOTAL AMOUNT:"

                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/total"
                        android:layout_toRightOf="@+id/total"
                        android:id="@+id/Updateamount"
                        android:singleLine="true"
                        android:inputType="number"

                        android:background="@drawable/edit_text_border"
                        android:backgroundTint="@color/yellow"
                        android:padding="5dp"/>

                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button1"
                android:layout_below="@+id/itemDetails"

                android:gravity="center">


                <Button
                    android:id="@+id/updateOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLACE THE ORDER"
                    android:textColor="@color/white"
                    android:shadowColor="@color/orange"
                    android:inputType="number"
                    android:padding="10dp"
                    android:backgroundTint="#05358A"
                    />


            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</FrameLayout>

